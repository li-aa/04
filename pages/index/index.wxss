

.goods-list .item{
  display: flex;
  margin-top: 90rpx;
  margin-left: 40rpx;
}

.goods-list .item .img{
  width: 200rpx;
  height:200rpx;
}
.goods-list .item .img image{
  width: 200rpx;
  height:200rpx;
}

.goods-list .item .content{
  width: 100%;
  height:200rpx;
  margin-left: 20rpx;
  padding-right:10rpx;
}
.goods-list .item .content .title{
  margin-top: 10rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods-list .item .content .brand{
  font-size: 25rpx;
  margin-top: 15rpx;
  color: grey;
}
.goods-list .item .content .price{
  margin-top: 15rpx;
}
.title-menu{
  display: flex;
  font-size: 15px;
  width: 100%;
  overflow-y: scroll;
  white-space: nowrap; 
  align-items: center;
 }
 .title-menu  .title-menu-item{
  display: block;
  width: 80px;
  margin:20rpx;
  border-radius: 10rpx;
  padding: 8rpx 20rpx;
  background: #f5f5f5;
  }
 
  .title-menu  .active{
    color: #fff;
    background:#ff5155 ;
  }